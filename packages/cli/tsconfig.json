{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"checkJs": true
	},
	"display": "Recommended",
	"$schema": "https://json.schemastore.org/tsconfig"
}
